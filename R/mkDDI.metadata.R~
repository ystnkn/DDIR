mkDDI.metadata <- function(title,data.file.name,ddi.file.name,var.ID,var.name,var.qstnLit,var.catgry.catValu,var.catgrylabl){
require(XML)
ddi <- newXMLDoc()
codeBook <- newXMLNode("codeBook",
                   attrs = c(version="2.5" ,ID=""), 
                   doc=ddi)
docDscr <- newXMLNode("docDscr",parent=codeBook)
stdyDscr <- newXMLNode("stdyDscr",parent=codeBook)
fileDscr <- newXMLNode("fileDscr",parent=codeBook)
dataDscr <- newXMLNode("dataDscr",parent=codeBook)
### docDscr
docDscr.citation <- newXMLNode("citation",parent=docDscr)
docDscr..titlStmt <- newXMLNode("titlStmt",paste('Metadata record for',title),parent=docDscr.citation)
docDscr..prodStmt <- newXMLNode("prodStmt",parent=docDscr.citation)
docDscr..prodStmt.prodDate <- newXMLNode("prodDate",paste(date()),parent=docDscr..prodStmt)
docDscr..prodStmt.software <- newXMLNode("software",paste('DDIR'),parent=docDscr..prodStmt)
docDscr..verStmt <- newXMLNode("verStmt",paste(date()),parent=docDscr.citation)
### stdyDscr
stdyDscr.citation <- newXMLNode("citation",parent=stdyDscr)
stdyDscr..titlStmt <- newXMLNode("titlStmt",paste(title),parent=stdyDscr.citation)
### fileDscr
fileDscr.citation <- newXMLNode("citation",parent=fileDscr)
fileDscr..fileTxt <- newXMLNode("fileTxt",parent=fileDscr.citation)
fileDscr..fileTxt.fileName <- newXMLNode("fileName",paste(data.file.name),parent=fileDscr..fileTxt)
fileDscr..fileTxt.dimensns <- newXMLNode("dimensns",parent=fileDscr..fileTxt)
fileDscr..fileTxt.dimensns.caseQnty <- newXMLNode("caseQnty",parent=fileDscr..fileTxt.dimensns)
fileDscr..fileTxt.dimensns.varQnty <- newXMLNode("varQnty",parent=fileDscr..fileTxt.dimensns)
fileDscr..fileTxt.fileType <- newXMLNode("fileType",'ASCII',attrs=c(charset='UTF-8'),parent=fileDscr..fileTxt)
### dataDscr
##dataDscr.var <- newXMLNode("var",parent=dataDscr,
##                           attrs=c(
##                               ID=paste(var.ID[1]),
##                               name=paste(var.name[1])))
##dataDscr.var.qstn <- newXMLNode("qstn",parent=dataDscr.var)
##dataDscr.var.qstn.qstnLit <- newXMLNode("qstnLit",
##                                        paste(var.qstnLit[1]),
##                                        parent=dataDscr.var.qstn)
var.func <- function(ID=var.ID,name=var.name,qstnLit=var.qstnLit,catValu=var.catgry.catValu,labl=var.catgry.labl){
dataDscr.var <- newXMLNode("var",parent=dataDscr,
                           attrs=c(
                               ID=paste(ID),
                               name=paste(name)))
dataDscr.var.qstn <- newXMLNode("qstn",parent=dataDscr.var)
dataDscr.var.qstn.qstnLit <- newXMLNode("qstnLit",
                                        paste(qstnLit),
                                        parent=dataDscr.var.qstn)
if(!is.na(catValu)){
    mapply(function(x,y){
        dataDscr.var.catgry <- newXMLNode("catgry",parent=dataDscr.var)
        dataDscr.var.catgry.catValu <- newXMLNode("catValu",
                                        paste(x),
                                        parent=dataDscr.var.catgry)
        dataDscr.var.catgry.labl <- newXMLNode("labl",
                                        paste(y),
                                        parent=dataDscr.var.catgry)
        },catValu,labl)
}
}
##var.func(var.ID[1],var.name[1],var.qstnLit[1])
mapply(var.func,var.ID,var.name,var.qstnLit,var.catgry.catValu,var.catgry.labl)
ddi
saveXML(ddi, ddi.file.name)#, encoding="UTF-8") ##なぜかUTF-8とすると改行がうまく出なくなる？
}
